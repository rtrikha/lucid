{
    "name": "lucid",
    "version": "1.0.0",
    "description": "a mindful experience",
    "author": "Raunak Trikha",
    "license": "MIT",
    "homepage": "https://www.lucid.2dots.xyz",
    "scripts": {
        "clean": "rimraf dist/{css/*,js/*,resources/*,*.html}",
        "autoprefixer": "postcss -u autoprefixer -r dist/styling/*",
        "scss": "node-sass --output-style compressed -o dist/styling styling",
        "lint": "eslint src/js || true",
        "lint-scss": "stylelint styling/*.scss --syntax scss || true",
        "uglify": "mkdirp dist/js -p && uglifyjs js/*.js -m -c -o dist/js/*.js",
        "uglifycss": "csso dist/styling/style.css -o dist/styling/style.css",
        "copyjs": "copyfiles ./js/*.js dist/",
        "copyhtmls": "copyfiles ./*.html dist/",
        "copyresources": "cp -R resources dist",
        "serve": "browser-sync start --startPath /dist --server --files \"dist/styling/*.css, dist/js/*.js, dist/*.html, !node_modules/**/*.html\"",
        "build:css": "run-s lint-scss scss autoprefixer uglifycss",
        "build:js": "run-s copyjs",
        "build:others": "run-s copyhtmls copyresources",
        "build": "run-s build:*",
        "watch:css": "onchange 'styling/**/*.scss' -- run-s build:css",
        "watch:js": "onchange \"/js\" -- run-s build:js",
        "watch:html": "onchange \"*.html\" -- run-s copyhtmls",
        "watch": "run-p serve watch:*"
    },
    "devDependencies": {
        "autoprefixer": "^9.0.1",
        "browser-sync": "^2.12.8",
        "copyfiles": "^2.2.0",
        "csso-cli": "^3.0.0",
        "eslint": "^5.2.0",
        "eslint-config-standard": "^12.0.0",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-node": "^7.0.1",
        "eslint-plugin-promise": "^3.8.0",
        "eslint-plugin-standard": "^3.1.0",
        "i": "^0.3.6",
        "imagemin-cli": "^3.0.0",
        "mkdirp": "^0.5.1",
        "node-sass": "^4.9.2",
        "npm": "^6.14.4",
        "npm-run-all": "^4.1.3",
        "onchange": "^4.1.0",
        "postcss-cli": "^6.0.0",
        "rimraf": "^2.5.4",
        "stylelint": "^9.4.0",
        "uglify-es": "^3.3.10"
    },
    "main": ".eslintrc.js"
}
